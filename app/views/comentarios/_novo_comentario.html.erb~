<%= form_for Comentario.new, remote: true, :html => { :class => 'form-inline' } do |f| %>
  
<dl class="dl-horizontal">

  <dt>
    <%= f.label :conteudo %>:
  </dt>
  <dd>  
    <%= f.text_area :conteudo, class: "form-control", :rows => "2" %>
  

  <%= f.hidden_field :comentavel_id, value: comentavel.id %>
  <%= f.hidden_field :comentavel_type, value: comentavel.class %>
  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  </dd>
<% end %>
