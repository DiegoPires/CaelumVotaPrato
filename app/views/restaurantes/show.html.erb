<%- model_class = Restaurante -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Nome: </dt>
  <dd><%= @restaurante.nome %></dd>
  <dt>Endereco: </dt>
  <dd><%= @restaurante.endereco %></dd>
  <dt>Especialidade: </dt>
  <dd><%= @restaurante.especialidade %></dd>
  <dt>Nota media: </dt>
  <dd><%= @restaurante.qualificacoes.average(:nota) %></dd>
  <dt>Qualificacoes: </dt>
  <dd><%= @restaurante.qualificacoes.count %></dd>
  <dt>Preco medio: </dt>
  <dd><%= @restaurante.qualificacoes.average(:valor_gasto) %></dd>
</dl>

<%= comentarios @restaurante %>
<%= novo_comentario @restaurante %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              restaurantes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_restaurante_path(@restaurante), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              restaurante_path(@restaurante),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
